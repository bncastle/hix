#This is an HR file for building Hix.exe
--variables
    UPX = c:\utils\upx.exe -9
    DestDir = C:\utils
    ExeName= hix.exe
--tasks 
    build = haxe build.hxml
    _pack = :UPX: :DestDir:\:ExeName:
    _delete = if exist :DestDir:\:ExeName:.old del :DestDir:\:ExeName:.old
    _rename = if exist :DestDir:\:ExeName: ren :DestDir:\:ExeName: :ExeName:.old
    _deploy = copy /Y .\bin\:ExeName: :DestDir:
    buildDeploy = [:build, :_delete, :_rename, :_deploy :_pack]